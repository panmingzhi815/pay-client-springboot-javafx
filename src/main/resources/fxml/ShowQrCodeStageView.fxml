<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" fillHeight="false" prefHeight="1080.0" prefWidth="1280.0" style="-fx-background-color: #aabbcc;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pan.module.charge.ShowQrCodeController">
    <children>
        <VBox fx:id="root" alignment="CENTER" prefHeight="600.0" prefWidth="400.0" style="-fx-background-radius: 20px 20px 20px 20px; -fx-background-color: #f0be00;">
            <children>
                <FlowPane alignment="CENTER" minHeight="80.0" stylesheets="@../css/bootstrapfx.css">
                    <children>
                        <Label fx:id="title" alignment="CENTER" text="请扫码支付">
                            <FlowPane.margin>
                                <Insets />
                            </FlowPane.margin>
                        </Label>
                    </children>
                    <styleClass>
                        <String fx:value="h1" />
                        <String fx:value="strong" />
                    </styleClass>
                </FlowPane>
                <FlowPane alignment="CENTER" prefHeight="100.0" style="-fx-background-color: #22262b;">
                    <children>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/ok.png" />
                            </image>
                        </ImageView>
                        <Label style="-fx-font-size: 20pt;" text="微信" textFill="WHITE">
                            <FlowPane.margin>
                                <Insets left="10.0" />
                            </FlowPane.margin>
                        </Label>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/alipay.png" />
                            </image>
                            <FlowPane.margin>
                                <Insets left="50.0" />
                            </FlowPane.margin>
                        </ImageView>
                        <Label style="-fx-font-size: 20pt;" text="支付宝" textFill="WHITE">
                            <FlowPane.margin>
                                <Insets left="10.0" />
                            </FlowPane.margin>
                        </Label>
                    </children>
                </FlowPane>
                <HBox alignment="CENTER" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <children>
                        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/qrcode.jpg" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutX="10.0" layoutY="587.0" minHeight="80.0" style="-fx-background-color: #f0be00; -fx-background-radius: 0 0 20px 20px;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#close" stylesheets="@../css/bootstrapfx.css" text="取消支付">
                            <styleClass>
                                <String fx:value="btn-lg" />
                                <String fx:value="btn" />
                                <String fx:value="btn-danger" />
                            </styleClass>
                        </Button>
                    </children>
                </HBox>
            </children>
            <effect>
                <DropShadow />
            </effect>
        </VBox>
    </children>
</HBox>
