<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" alignment="CENTER" prefHeight="1080.0"
      prefWidth="1280.0"
      style="-fx-background-radius: 20px; -fx-padding: 200px 400px 200px 400px; -fx-background-insets: 200px 400px 200px 400px;"
      xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="org.pan.module.charge.ShowQrCodeController">
    <children>
        <FlowPane alignment="CENTER" minHeight="120.0" stylesheets="@../css/bootstrapfx.css">
            <children>
                <Label fx:id="title" alignment="CENTER" text="请扫码支付">
                    <FlowPane.margin>
                        <Insets/>
                    </FlowPane.margin>
                </Label>
            </children>
            <styleClass>
                <String fx:value="h1"/>
                <String fx:value="strong"/>
            </styleClass>
        </FlowPane>
        <FlowPane alignment="CENTER" prefHeight="100.0" style="-fx-background-color: #22262b;">
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/ok.png"/>
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 20pt;" text="微信" textFill="WHITE">
                    <FlowPane.margin>
                        <Insets left="10.0"/>
                    </FlowPane.margin>
                </Label>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/alipay.png"/>
                    </image>
                    <FlowPane.margin>
                        <Insets left="50.0"/>
                    </FlowPane.margin>
                </ImageView>
                <Label style="-fx-font-size: 20pt;" text="支付宝" textFill="WHITE">
                    <FlowPane.margin>
                        <Insets left="10.0"/>
                    </FlowPane.margin>
                </Label>
            </children>
        </FlowPane>
        <FlowPane alignment="BOTTOM_CENTER" layoutX="410.0" layoutY="330.0" prefHeight="80.0">
            <children>
                <Label style="-fx-font-size: 15pt;" text="订单交易编号 : 20180112145428123" textFill="#797979">
                    <FlowPane.margin>
                        <Insets left="10.0"/>
                    </FlowPane.margin>
                </Label>
            </children>
        </FlowPane>
        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <children>
                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/qrcode.jpg"/>
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="587.0" minHeight="80.0">
            <children>
                <Button mnemonicParsing="false" onAction="#close" stylesheets="@../css/bootstrapfx.css" text="取消支付">
                    <styleClass>
                        <String fx:value="btn-lg"/>
                        <String fx:value="btn"/>
                        <String fx:value="btn-danger"/>
                    </styleClass>
                </Button>
            </children>
        </HBox>
    </children>
    <effect>
        <DropShadow/>
    </effect>
</VBox>
